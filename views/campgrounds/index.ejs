<%-include('../partials/header')%>

    <div class="container mt-3">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome To YelpCamp!</h1>
                <p>view our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                </p>
            </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap:wrap;">

            <% campground.forEach(function(camps){ %>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card">
                        <img src="<%=camps.image%>" class="img-thumbnail card-img-top">
                        <div class="caption">
                            <h4 class="card-title">
                                <%=camps.name%>
                            </h4>
                        </div>
                        <p>
                            <a class="btn btn-primary" href="/campgrounds/<%=camps._id%>">More Info</a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <%-include('../partials/footer')%>