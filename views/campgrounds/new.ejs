<%-include('../partials/header')%>
    <div class="container containerStyle">
        <div class="row">

            <div style=" margin: 26px auto;" class="mt-3">
                <h1 id="head" class="new-camp">Create a New Campground</h1>
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="image url" name="image">
                    </div>
                    <div class="form-group">

                        <input class="form-control" type="text" placeholder="description" name="description">
                    </div>
                    <div class="form-group">

                        <button class="btn btn-block btn-primary"> Submit</button>
                    </div>
                </form>
                <a href="/campgrounds">Back Page</a>
            </div>

        </div>

    </div>
    <%-include('../partials/footer')%>